<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChiTietSP_Activity1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/img_mt"
            android:layout_weight="1"
            android:paddingStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nike"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_weight="11"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@mipmap/img_tim"
            android:layout_weight="1"
            android:paddingEnd="20dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@mipmap/img"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giày chạy bộ nữ Nike Air Zoom Structure 25 - DJ7884-102 "
        android:textStyle="bold"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#21BA91">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="20dp"
            android:text="$90.56"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi Tiết Sản Phẩm:"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Air Jordan 1 Mid Smoke Grey ra mắt tháng 6/2020 với giá 115$, là đôi giày phân khúc phổ thông, sử dụng chất liệu da tổng hợp và thiết kế truyền thống của dòng Air Jordan 1. Điểm nổi bật của đôi giày này là phối màu đơn giản nhưng ấn tượng với tông đen, trắng, và xám khói, mang lại vẻ trung tính và dễ dàng phối đồ hàng ngày."
            android:textSize="15dp"
            android:padding="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size:"
            android:textSize="30dp"
            android:paddingStart="10dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="39"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:layout_marginEnd="10dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:layout_marginEnd="10dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="41"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:layout_marginEnd="10dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:layout_marginEnd="10dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="43"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:layout_marginEnd="10dp" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD TO CART"
            android:textStyle="bold"
            android:textSize="25dp"
            android:backgroundTint="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

</LinearLayout>